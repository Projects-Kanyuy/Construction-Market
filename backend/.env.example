# =================================
# CONSTRUCTION MARKET BACKEND CONFIG
# =================================

# Application Settings
NODE_ENV=development
PORT=5000
APP_NAME="Construction Market API"

# Frontend URL (for CORS, profile links, and redirects)
FRONTEND_URL=http://localhost:3000

# =================================
# DATABASE CONFIGURATION
# =================================

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/construction_market?retryWrites=true&w=majority

# =================================
# AUTHENTICATION & SECURITY
# =================================

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# JWT Expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRES_IN=7d

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# CLOUDINARY CONFIGURATION
# =================================

# Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =================================
# FACEBOOK PIXEL TRACKING
# =================================

# Client-side tracking (for users searching for companies)
FACEBOOK_PIXEL_CLIENT_ID=your-client-side-pixel-id
FACEBOOK_PIXEL_ACCESS_TOKEN=your-facebook-access-token

# Company-side tracking (for companies registering)
FACEBOOK_PIXEL_COMPANY_ID=your-company-side-pixel-id

# =================================
# GOOGLE ANALYTICS 4
# =================================

# Google Analytics 4 for additional tracking
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your-ga4-api-secret

# =================================
# PAYMENT PROVIDERS
# =================================

# Default payment provider (stripe, flutterwave, paystack, etc.)
DEFAULT_PAYMENT_PROVIDER=stripe

# --- STRIPE ---
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# --- FLUTTERWAVE ---
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-public-key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-secret-key
FLUTTERWAVE_ENVIRONMENT=sandbox

# --- PAYSTACK ---
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# --- PAYPAL ---
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# =================================
# EMAIL CONFIGURATION
# =================================

# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@constructionmarket.com

# =================================
# GEOCODING & LOCATION SERVICES
# =================================

# Google Maps API for geocoding addresses
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox API (alternative)
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-access-token

# =================================
# RATE LIMITING
# =================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# FILE UPLOAD LIMITS
# =================================

# File upload limits (in MB)
MAX_FILE_SIZE=5
MAX_FILES_PER_UPLOAD=10

# =================================
# LOGGING & MONITORING
# =================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-url

# =================================
# EXTERNAL APIs
# =================================

# SMS Provider (Twilio, Africa's Talking, etc.)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (optional)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# =================================
# CACHE CONFIGURATION
# =================================

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =================================
# SOCIAL MEDIA INTEGRATION
# =================================

# For social media auto-posting features
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# =================================
# BACKUP & STORAGE
# =================================

# AWS S3 for file storage (alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=construction-market-files

# =================================
# DEVELOPMENT & TESTING
# =================================

# Test database (for running tests)
MONGO_TEST_URI=mongodb://localhost:27017/construction_market_test

# Debug mode
DEBUG=app:*

# =================================
# PRODUCTION SETTINGS
# =================================

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Helmet security settings
HELMET_CSP_SCRIPT_SRC='self' 'unsafe-inline' https://www.googletagmanager.com
HELMET_CSP_CONNECT_SRC='self' https://api.stripe.com https://api.flutterwave.com

# =================================
# FEATURE FLAGS
# =================================

# Enable/disable features
ENABLE_FACEBOOK_TRACKING=true
ENABLE_GOOGLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_GEOLOCATION=true
ENABLE_PAYMENT_PROCESSING=true

# =================================
# BUSINESS CONFIGURATION
# =================================

# Company information
COMPANY_NAME="Construction Market"
COMPANY_EMAIL=info@constructionmarket.com
COMPANY_PHONE="+1234567890"
COMPANY_ADDRESS="123 Business St, City, Country"

# Support information
SUPPORT_EMAIL=support@constructionmarket.com
ADMIN_EMAIL=admin@constructionmarket.com

# =================================
# NOTES
# =================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use strong, unique passwords and secrets
# 4. For production, use environment-specific values
# 5. Some services are optional - only configure what you need